/*3.-Media Query * /

/ * Donde la resolucion sea mayora 1081px * /
@media ( ancho mínimo : 1081 px ) {
	p . ti1 ,  p . ti2 , a .1 {
		tamaño de fuente : 1.3 em ;
		acolchado : 2 % ;
	}
	img . navig {
		ancho : 10 % ;
	}
	sección . menuicono {
	acolchado : 0  2 % ;
	}
	sección . Texafu ,  sección . texafu2 {
		alinear texto : centro;
		ancho : 29 % ;
		fondo : ninguno;
		pantalla : bloque en línea;
		alineación vertical : arriba;
		acolchado : 1 %  1 % ;

	}
		sección . texafu2 {
			ancho : 62 % ;
	}
	
}
